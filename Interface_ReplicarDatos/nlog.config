<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload ="true"
	  internalLogLevel ="Info"
	  internalLogFile="S:\Logs\NLogInfo.txt">

	<extensions>
		<add assembly="Nlog.Web.AspNetCore"/>
	</extensions>

	<targets>
		<target name="all_logs" xsi:type="File" fileName="S:\Logs\nlog-all-${shortdate}.log"/>
		<target name="relevant_logs" xsi:type="File" fileName="S:\Logs\nlog-relevant-${shortdate}.log"/>

	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="all_logs" />
		<logger name="*" minlevel="Warn" writeTo="relevant_logs" />
	</rules>
</nlog>